<Window
    x:Class="GreenLuma_Manager.Dialogs.SettingsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Settings"
    Width="950"
    Height="680"
    MinWidth="850"
    MinHeight="600"
    Background="#FF1A1A1A"
    Foreground="#FFF"
    ResizeMode="CanResize"
    TextOptions.TextFormattingMode="Display"
    TextOptions.TextRenderingMode="ClearType"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="40"
            CornerRadius="0"
            GlassFrameThickness="1"
            ResizeBorderThickness="4"
            UseAeroCaptionButtons="True" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="DarkBg" Color="#FF1A1A1A" />
            <SolidColorBrush x:Key="SurfaceBg" Color="#FF0F0F0F" />
            <SolidColorBrush x:Key="BorderBrush" Color="#FF2A2A2A" />
            <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFFFF" />
            <SolidColorBrush x:Key="TextSecondary" Color="#FFAAAAAA" />
            <SolidColorBrush x:Key="TextTertiary" Color="#FF666666" />
            <SolidColorBrush x:Key="DangerBrush" Color="#FFFF4444" />

            <CubicEase x:Key="ChillEase" EasingMode="EaseOut" />

            <Style x:Key="ModernBtn" TargetType="{x:Type Button}">
                <Setter Property="Background" Value="{StaticResource SurfaceBg}" />
                <Setter Property="Foreground" Value="{StaticResource TextPrimary}" />
                <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="Padding" Value="16,8" />
                <Setter Property="FontSize" Value="13" />
                <Setter Property="FontWeight" Value="Medium" />
                <Setter Property="Cursor" Value="Hand" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border
                                x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                SnapsToDevicePixels="true">
                                <ContentPresenter
                                    x:Name="contentPresenter"
                                    Margin="{TemplateBinding Padding}"
                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                    Focusable="False"
                                    RecognizesAccessKey="True"
                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FF252525" />
                                    <Setter TargetName="border" Property="BorderBrush" Value="#FF444444" />
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FF151515" />
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.4" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style
                x:Key="AccentBtn"
                BasedOn="{StaticResource ModernBtn}"
                TargetType="{x:Type Button}">
                <Setter Property="Background" Value="{StaticResource TextPrimary}" />
                <Setter Property="Foreground" Value="{StaticResource DarkBg}" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border
                                x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                                <ContentPresenter
                                    Margin="{TemplateBinding Padding}"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Opacity" Value="0.9" />
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Opacity" Value="0.7" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style
                x:Key="DangerBtn"
                BasedOn="{StaticResource ModernBtn}"
                TargetType="{x:Type Button}">
                <Setter Property="Foreground" Value="{StaticResource DangerBrush}" />
                <Setter Property="BorderBrush" Value="{StaticResource DangerBrush}" />
                <Setter Property="Background" Value="#11FF4444" />
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{StaticResource DangerBrush}" />
                        <Setter Property="Foreground" Value="{StaticResource TextPrimary}" />
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="ChillTextBox" TargetType="{x:Type TextBox}">
                <Setter Property="Background" Value="{StaticResource SurfaceBg}" />
                <Setter Property="Foreground" Value="{StaticResource TextPrimary}" />
                <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="Padding" Value="12,10" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Height" Value="44" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="CaretBrush" Value="{StaticResource TextPrimary}" />
                <Setter Property="SelectionBrush" Value="{StaticResource TextSecondary}" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type TextBox}">
                            <Border
                                x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                                <Grid>
                                    <ScrollViewer
                                        x:Name="PART_ContentHost"
                                        Focusable="false"
                                        HorizontalScrollBarVisibility="Hidden"
                                        VerticalScrollBarVisibility="Hidden" />
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation
                                                    EasingFunction="{StaticResource ChillEase}"
                                                    Storyboard.TargetName="border"
                                                    Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                    To="#FFFFFFFF"
                                                    Duration="0:0:0.3" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation
                                                    Storyboard.TargetName="border"
                                                    Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                    To="#FF2A2A2A"
                                                    Duration="0:0:0.3" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="#FF555555" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="ChillSwitch" TargetType="{x:Type CheckBox}">
                <Setter Property="Foreground" Value="{StaticResource TextPrimary}" />
                <Setter Property="Cursor" Value="Hand" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type CheckBox}">
                            <Grid Margin="0,0,0,0" Background="Transparent">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <ContentPresenter
                                    VerticalAlignment="Center"
                                    Content="{TemplateBinding Content}"
                                    TextBlock.FontSize="14"
                                    TextBlock.FontWeight="Medium" />
                                <Border
                                    x:Name="Track"
                                    Grid.Column="1"
                                    Width="48"
                                    Height="26"
                                    Background="{StaticResource BorderBrush}"
                                    CornerRadius="13">
                                    <Grid>
                                        <Ellipse
                                            x:Name="Knob"
                                            Width="20"
                                            Height="20"
                                            Margin="3,0,0,0"
                                            HorizontalAlignment="Left"
                                            Fill="{StaticResource TextSecondary}">
                                            <Ellipse.RenderTransform>
                                                <TranslateTransform X="0" />
                                            </Ellipse.RenderTransform>
                                        </Ellipse>
                                    </Grid>
                                </Border>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation
                                                    EasingFunction="{StaticResource ChillEase}"
                                                    Storyboard.TargetName="Track"
                                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                    To="#FFFFFFFF"
                                                    Duration="0:0:0.4" />
                                                <ColorAnimation
                                                    Storyboard.TargetName="Knob"
                                                    Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                    To="#FF1A1A1A"
                                                    Duration="0:0:0.3" />
                                                <DoubleAnimation
                                                    EasingFunction="{StaticResource ChillEase}"
                                                    Storyboard.TargetName="Knob"
                                                    Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                                    To="22"
                                                    Duration="0:0:0.4" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation
                                                    Storyboard.TargetName="Track"
                                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                    To="#FF2A2A2A"
                                                    Duration="0:0:0.4" />
                                                <ColorAnimation
                                                    Storyboard.TargetName="Knob"
                                                    Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                    To="#FFAAAAAA"
                                                    Duration="0:0:0.3" />
                                                <DoubleAnimation
                                                    EasingFunction="{StaticResource ChillEase}"
                                                    Storyboard.TargetName="Knob"
                                                    Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                                    To="0"
                                                    Duration="0:0:0.4" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="NavRadio" TargetType="{x:Type RadioButton}">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="Foreground" Value="{StaticResource TextSecondary}" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontWeight" Value="Medium" />
                <Setter Property="Padding" Value="24,14" />
                <Setter Property="Margin" Value="0,0,0,4" />
                <Setter Property="Cursor" Value="Hand" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type RadioButton}">
                            <Border
                                x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Border
                                        x:Name="indicator"
                                        Width="3"
                                        Height="20"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Background="{StaticResource TextPrimary}"
                                        CornerRadius="1.5"
                                        Opacity="0"
                                        RenderTransformOrigin="0.5,0.5">
                                        <Border.RenderTransform>
                                            <ScaleTransform ScaleY="0" />
                                        </Border.RenderTransform>
                                    </Border>
                                    <ContentPresenter
                                        Grid.Column="1"
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center" />
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter Property="Foreground" Value="{StaticResource TextPrimary}" />
                                    <Setter Property="Background" Value="#0FFFFFFF" />
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                                                    Storyboard.TargetName="indicator"
                                                    Storyboard.TargetProperty="Opacity"
                                                    To="1"
                                                    Duration="0:0:0.3" />
                                                <DoubleAnimation
                                                    EasingFunction="{StaticResource ChillEase}"
                                                    Storyboard.TargetName="indicator"
                                                    Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                    To="1"
                                                    Duration="0:0:0.4" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                                                    Storyboard.TargetName="indicator"
                                                    Storyboard.TargetProperty="Opacity"
                                                    To="0"
                                                    Duration="0:0:0.2" />
                                                <DoubleAnimation
                                                    Storyboard.TargetName="indicator"
                                                    Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                    To="0"
                                                    Duration="0:0:0.3" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="{StaticResource TextPrimary}" />
                                    <Setter TargetName="border" Property="Background" Value="#08FFFFFF" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="FadeInPanel" TargetType="Grid">
                <Style.Triggers>
                    <Trigger Property="Visibility" Value="Visible">
                        <Trigger.EnterActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                        Storyboard.TargetProperty="Opacity"
                                        From="0"
                                        To="1"
                                        Duration="0:0:0.5" />
                                    <DoubleAnimation
                                        EasingFunction="{StaticResource ChillEase}"
                                        Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                        From="10"
                                        To="0"
                                        Duration="0:0:0.5" />
                                </Storyboard>
                            </BeginStoryboard>
                        </Trigger.EnterActions>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="DescriptionTxt" TargetType="TextBlock">
                <Setter Property="FontSize" Value="13" />
                <Setter Property="Foreground" Value="{StaticResource TextTertiary}" />
                <Setter Property="Margin" Value="0,0,0,12" />
                <Setter Property="TextWrapping" Value="Wrap" />
            </Style>

        </ResourceDictionary>
    </Window.Resources>

    <Window.RenderTransform>
        <TranslateTransform />
    </Window.RenderTransform>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border
            Grid.Column="0"
            Background="{StaticResource SurfaceBg}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="30,40,30,40">
                    <TextBlock
                        FontSize="22"
                        FontWeight="Bold"
                        Foreground="{StaticResource TextPrimary}"
                        Text="Settings" />
                    <TextBlock
                        Margin="0,6,0,0"
                        FontSize="13"
                        Foreground="{StaticResource TextTertiary}"
                        Text="Preferences &amp; Config" />
                </StackPanel>

                <StackPanel Grid.Row="1" Margin="16,0">
                    <RadioButton
                        x:Name="NavGeneral"
                        Checked="Nav_Checked"
                        Content="General"
                        GroupName="Nav"
                        IsChecked="True"
                        Style="{StaticResource NavRadio}" />
                    <RadioButton
                        x:Name="NavSystem"
                        Checked="Nav_Checked"
                        Content="System"
                        GroupName="Nav"
                        Style="{StaticResource NavRadio}" />
                    <RadioButton
                        x:Name="NavAdvanced"
                        Checked="Nav_Checked"
                        Content="Advanced"
                        GroupName="Nav"
                        Style="{StaticResource NavRadio}" />
                </StackPanel>

                <StackPanel Grid.Row="2" Margin="24,30">
                    <Button
                        Click="Ok_Click"
                        Content="Save Changes"
                        Style="{StaticResource AccentBtn}" />
                    <Button
                        Margin="0,12,0,0"
                        Click="Cancel_Click"
                        Content="Discard"
                        Style="{StaticResource ModernBtn}" />
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Column="1" Background="{StaticResource DarkBg}">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="Transparent" />

            <Grid Grid.Row="1" Margin="40,0,40,40">

                <Grid
                    x:Name="ViewGeneral"
                    RenderTransformOrigin="0.5,0.5"
                    Style="{StaticResource FadeInPanel}"
                    Visibility="Visible">
                    <Grid.RenderTransform>
                        <TranslateTransform />
                    </Grid.RenderTransform>

                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,4"
                            FontSize="24"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource TextPrimary}"
                            Text="General" />
                        <TextBlock
                            Margin="0,0,0,24"
                            FontSize="14"
                            Foreground="{StaticResource TextSecondary}"
                            Text="Configure your installation paths." />

                        <Border
                            Padding="24"
                            Background="{StaticResource SurfaceBg}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8">
                            <StackPanel>
                                <Grid Margin="0,0,0,20">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="12"
                                        FontWeight="Bold"
                                        Foreground="{StaticResource TextTertiary}"
                                        Text="INSTALLATION PATHS" />
                                    <Button
                                        HorizontalAlignment="Right"
                                        Click="AutoDetect_Click"
                                        Content="Auto-Detect"
                                        FontSize="11"
                                        Style="{StaticResource ModernBtn}" />
                                </Grid>

                                <StackPanel Margin="0,0,0,20">
                                    <TextBlock
                                        Margin="0,0,0,4"
                                        FontSize="13"
                                        Foreground="{StaticResource TextSecondary}"
                                        Text="Steam Directory" />
                                    <TextBlock Style="{StaticResource DescriptionTxt}"
                                               Text="The main installation folder containing Steam.exe." />
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="12" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="TxtSteamPath" Style="{StaticResource ChillTextBox}" />
                                        <Button
                                            Grid.Column="2"
                                            Width="80"
                                            Click="BrowseSteam_Click"
                                            Content="Browse"
                                            Style="{StaticResource ModernBtn}" />
                                    </Grid>
                                </StackPanel>

                                <StackPanel>
                                    <TextBlock
                                        Margin="0,0,0,4"
                                        FontSize="13"
                                        Foreground="{StaticResource TextSecondary}"
                                        Text="GreenLuma Directory" />
                                    <TextBlock Style="{StaticResource DescriptionTxt}"
                                               Text="The folder where DLLInjector.exe and GreenLuma files are located." />
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="12" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="TxtGreenLumaPath" Style="{StaticResource ChillTextBox}" />
                                        <Button
                                            Grid.Column="2"
                                            Width="80"
                                            Click="BrowseGreenLuma_Click"
                                            Content="Browse"
                                            Style="{StaticResource ModernBtn}" />
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>

                <Grid
                    x:Name="ViewSystem"
                    RenderTransformOrigin="0.5,0.5"
                    Style="{StaticResource FadeInPanel}"
                    Visibility="Collapsed">
                    <Grid.RenderTransform>
                        <TranslateTransform />
                    </Grid.RenderTransform>

                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,4"
                            FontSize="24"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource TextPrimary}"
                            Text="System" />
                        <TextBlock
                            Margin="0,0,0,24"
                            FontSize="14"
                            Foreground="{StaticResource TextSecondary}"
                            Text="Manage application behavior and updates." />

                        <Border
                            Margin="0,0,0,20"
                            Padding="24"
                            Background="{StaticResource SurfaceBg}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8">
                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,20"
                                    FontSize="12"
                                    FontWeight="Bold"
                                    Foreground="{StaticResource TextTertiary}"
                                    Text="STARTUP" />
                                <StackPanel>
                                    <CheckBox
                                        x:Name="ChkReplaceSteamAutostart"
                                        Content="Replace Steam on Windows Startup"
                                        Style="{StaticResource ChillSwitch}" />
                                    <TextBlock
                                        Margin="0,4,60,0"
                                        FontSize="13"
                                        Foreground="{StaticResource TextTertiary}"
                                        Text="Launch GreenLuma Manager automatically when Windows starts, replacing the default Steam startup."
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Border
                            Padding="24"
                            Background="{StaticResource SurfaceBg}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8">
                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,20"
                                    FontSize="12"
                                    FontWeight="Bold"
                                    Foreground="{StaticResource TextTertiary}"
                                    Text="UPDATES" />
                                <StackPanel Margin="0,0,0,24">
                                    <CheckBox
                                        x:Name="ChkDisableUpdateCheck"
                                        Checked="DisableUpdateCheck_Changed"
                                        Content="Disable Update Checking"
                                        Style="{StaticResource ChillSwitch}"
                                        Unchecked="DisableUpdateCheck_Changed" />
                                    <TextBlock
                                        Margin="0,4,60,0"
                                        FontSize="13"
                                        Foreground="{StaticResource TextTertiary}"
                                        Text="Prevent the application from checking for new versions on startup."
                                        TextWrapping="Wrap" />
                                </StackPanel>

                                <StackPanel>
                                    <CheckBox
                                        x:Name="ChkAutoUpdate"
                                        Content="Auto-Install Updates"
                                        Style="{StaticResource ChillSwitch}" />
                                    <TextBlock
                                        Margin="0,4,60,0"
                                        FontSize="13"
                                        Foreground="{StaticResource TextTertiary}"
                                        Text="Download and install updates automatically instead of being redirected to the GitHub page."
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>

                <Grid
                    x:Name="ViewAdvanced"
                    RenderTransformOrigin="0.5,0.5"
                    Style="{StaticResource FadeInPanel}"
                    Visibility="Collapsed">
                    <Grid.RenderTransform>
                        <TranslateTransform />
                    </Grid.RenderTransform>

                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,4"
                            FontSize="24"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource TextPrimary}"
                            Text="Advanced" />
                        <TextBlock
                            Margin="0,0,0,24"
                            FontSize="14"
                            Foreground="{StaticResource TextSecondary}"
                            Text="Dangerous actions and data management." />

                        <Border
                            Padding="24"
                            Background="#0DFF4444"
                            BorderBrush="{StaticResource DangerBrush}"
                            BorderThickness="1"
                            CornerRadius="8">
                            <Border.Effect>
                                <DropShadowEffect
                                    BlurRadius="20"
                                    Opacity="0.15"
                                    ShadowDepth="0"
                                    Color="#FFFF4444" />
                            </Border.Effect>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="15"
                                        FontWeight="Bold"
                                        Foreground="{StaticResource DangerBrush}"
                                        Text="Danger Zone" />
                                    <TextBlock
                                        Margin="0,4,0,0"
                                        FontSize="13"
                                        Foreground="{StaticResource TextSecondary}"
                                        Text="Irreversibly wipe all application data, profiles, settings, and cache."
                                        TextWrapping="Wrap" />
                                </StackPanel>
                                <Button
                                    Grid.Column="1"
                                    Click="WipeData_Click"
                                    Content="Wipe Data"
                                    Style="{StaticResource DangerBtn}" />
                            </Grid>
                        </Border>
                    </StackPanel>
                </Grid>

            </Grid>
        </Grid>
    </Grid>
</Window>